{% extends 'base.html.twig' %}

{% block title %}Hello ProgrammesController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>{{controller_name}}</h1>

		<div class='d-flex'>
			{% for produit in produits %}

				<div class="card" style="width: 18rem;">
					<img src="..." class="card-img-top" alt="...">
					<div class="card-body">
						<h5 class="card-title">
							{{produit.title}}
						</h5>
						<p class="card-text ">
							{{produit.introduction}}
						</p>
						<a href="{{ path('app_programmes_show', {'id': produit.id}) }}" class="btn btn-primary">Voir</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}
