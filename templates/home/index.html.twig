{% extends 'base.html.twig' %}

{% block title %}Ventalis - Site de voyage
{% endblock %}

{% block body %}

	<link rel='stylesheet' type='text/css' href="/css/home.css">

	<style></style>

	<div class="hero-banner">
		<h1>Laissez vous emporter !</h1>
		<video autoplay='autoplay' muted loop>
			<source src='/images/video/hero-banner-video.mp4'>
		</video>
	</div>

	<div class='container'>

		<h2>
			Les avantages de Ventalis</h2>
		<div id='presentation-section'>
			<div>
				<img alt='' src='https://cdn-icons-png.flaticon.com/512/6503/6503245.png'>

