		<script>

			menu = document.getElementById('mobile-menu');
function toggleMenu() {
menu.classList.toggle('active');
}
function resize() {
if (window.matchMedia("(min-width: 1000px)").matches && menu.classList.contains('active')) {
toggleMenu();
}
}
window.addEventListener('resize', resize, false);
		</script>
		<div style='margin-top : 70px '> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
</body></html>
