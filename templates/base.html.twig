<!DOCTYPE html>
<html lang='en'>
	<head>
		<meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Réservation de voyages écolos
			{% endblock %}
		</title>
		<link rel="icon" href="/images/favicon.png">
		{# <link
																																										rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>"> #}
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}

		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous"> <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js" integrity="sha384-qKXV1j0HvMUeCBQ+QVp7JcfGl760yU08IQ+GpUo5hlbpg51QRiuqHAJz8+BrxE/N" crossorigin="anonymous"></script>

		<link href="/css/navbar.css" rel="stylesheet">
		<link href="/css/index.css" rel="stylesheet">

		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>

	<body>
		{% for alert in app.flashes('success') %}
			<div class="alert alert-success">{{ alert }}</div>
		{% endfor %}

		<nav class="navbar navbar-expand-lg bg-body-primary fixed-top">
			{% if is_granted('ROLE_ADMIN') %}
				<a class="navbar-brand" href="{{path('app_home')}}">Ventalis (Admin)</a>
			{% else %}
				<a class="navbar-brand" href="{{path('app_home')}}">Ventalis
				</a>
			{% endif %}
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<class="collapsenavbar-collapse" id="navbarNav">
				{% if is_granted('ROLE_USER') %}
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_programmes')}}">Tous les programmes</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_compte')}}">Mon espace</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" href="{{path('app_message')}}">Assistance</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_contact')}}">Contact</a>
						</li>
					</ul>
					<ul class="navbar-nav right-side">
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_compte_panier')}}">Panier</a>
						</li>
						{% if is_granted('ROLE_EMP') %}
							<li class="nav-item">
								<a class='nav-link' href='#'>
									Intranet
								</a>
							</li>
						{% elseif is_granted('ROLE_ADMIN') %}
							<li class="nav-item">
								<a class='nav-link' href='#'>
									Administration
								</a>
							</li>
						{% endif %}
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_logout')}}">Déconnexion</a>
						</li>
					{% else %}
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_programmes')}}">Tous les programmes</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_contact')}}">Contact</a>
						</li>
					</ul>
					<ul class='navbar-nav'>
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_login')}}">Connexion</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="{{path('app_register')}}">Inscription</a>
						</li>
					</ul>
				{% endif %}
			</div>
		</nav>
		<div style='margin-top : 80px '> {% block body %}{% endblock %}
			</div>
		</body>
	</html>
