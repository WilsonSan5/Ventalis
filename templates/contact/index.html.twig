{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!
{% endblock %}

{% block body %}
	<style>
		body {
			padding-top: 1em;
		}
		form {
			display: flex;
			flex-direction: column;
			background-color: whitesmoke;
			border-radius: 10px;
			padding: 2em;
		}
		textarea {
			height: 200px;
			border-radius: 5px;
			border: 1px solid grey;
		}

		input {
			padding: 5px;
			margin-bottom: 1em;
			resize: none;
			border-radius: 5px;
			border: 1px solid grey;
		}

		#submit-btn {
			padding: 0.5em 2em;
			border-radius: 5px;
			border: none;
			color: white;
			background-color: var(--primary-color);

			margin: 1em auto;
		}
		#submit-btn:hover {
			background-color: var(--primary-color);
		}
	</style>

	<div class='container'>
		<h1>
			Nous contacter
		</h1>
		{{ form_start(form) }}
		{{form_label(form.email)}}
		{{ form_widget(form.email) }}

		{{form_label(form.objet)}}
		{{ form_widget(form.objet) }}

		{{form_label(form.message)}}
		{{ form_widget(form.message) }}

		<button type='submit' id='submit-btn'>Envoyer</button>
		{{ form_end(form) }}
	</div>
{% endblock %}
