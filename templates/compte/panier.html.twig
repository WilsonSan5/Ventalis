{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<style></style>
	<link rel='stylesheet' type='text/css' href='/css/panier.css'>

	<div class='container'>
		<div class='row'>
			<div class='col-9'>
				<h1>Mon panier</h1>
				{% for achat in produitsInCart %}
					{% include '/compte/_cart-card.html.twig' %}
				{% endfor %}
			</div>
			<div class='col-3 total-panier'>
				<h2>Total panier :
					<b>{{totalPanier|number_format(0,',', ' ')}}€</b>
				</h2>
				{% if produitsInCart|length > 0 %}
					<button type='button' onclick="location.href='{{path('app_panier_payment')}}';">Passer la commande</button>
				{% endif %}
			</div>
		</div>
		<hr>
		<h2>Total panier :
			<b>{{totalPanier|number_format(0,',', ' ')}}€</b>
		</h2>
		<button type='button' onclick="location.href='{{path('app_programmes')}}';">Continuer mes achats</button>
	</div>
{% endblock %}
