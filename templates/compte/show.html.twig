{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
    {{dump(user)}}

	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>

			<tr>
				<th>Password</th>
				<td>{{ user.password }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.nom }}</td>
			</tr>
			<tr>
				<th>Prenom</th>
				<td>{{ user.prenom }}</td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('app_home') }}">Retour</a>

	<a href="{{ path('app_compte_edit') }}">Modifier</a>

	{{ include('user/_delete_form.html.twig') }}
