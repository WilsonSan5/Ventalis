<link rel='stylesheet' href='/css/cart-card.css' type='text/css'>

<div class='cart-items'>
	<div class='row'>
		<div class='image-container col-3' onclick="location.href='{{path('app_programmes_show',{id : achat.produit.id})}}'"><img src='{{achat.produit.image}}' alt=''>
		</div>
		<div class='col-9 d-flex justify-content-between flex-wrap'>
			<div class='content col-xl-6 py-2'>
				<p class='dates-text'>
					Du
					{{ achat.planning.DateDepart | date("d/m/Y") }}
					- au
					{{achat.planning.DateFin | date("d/m/Y")}}
				</p>
				<p class='title-text'>
					{{achat.produit.pays}}
					-
					{{achat.produit.title}}
				</p>
			</div>
			<div class='action-content d-flex py-2'>
				<p>Quantité
					<br>
					{{achat.quantite}}
				</p>
				<p>
					Montant
					<br>
					{{ achat.prix }}
					€
				</p>
				{{ include('achat/_delete_form.html.twig') }}
			</div>
		</div>
	</div>
</div>
